{
  "name": "@monorepo/config",
  "version": "1.0.0",
  "description": "Merkezi konfigürasyon paketi; build-time .env değerlerini dist içine gömer ve diğer paketler kullanır.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "rimraf --no-glob ./dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json && node scripts/generate-env.js",
    "build:publish": "pnpm run build && pnpm publish --access restricted"
  },
  "publishConfig": {
    "registry": "https://registry.ilyasbozdemir.dev"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilyasbozdemir/monorepo-template.git"
  },
  "keywords": [
    "core",
    "shared",
    "module",
    "common",
    "services",
    "mongodb",
    "typescript",
    "utilities",
    "react",
    "nextjs"
  ],
  "author": "ilyasbozdemir.dev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ilyasbozdemir/monorepo-template.git/issues"
  },
  "homepage": "https://github.com/ilyasbozdemir/monorepo-template.git?tab=readme-ov-file",
  "dependencies": {
    "dotenv": "^16.3.1",
    "axios": "^1.7.5",
    "pubsub-js": "^1.9.5"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@types/pubsub-js": "^1.8.6",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.2.2"
  },
  "type": "module"
}
